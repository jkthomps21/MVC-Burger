<div class="container">

    <div class="jumbotron">
        <h1 id="color-text">Eat-Da-Burger!</h1>
        <p id="color-text">Make a burger, eat a burger.</p>
        <br>
        <h2 id="color-text">Make a Burger</h2>
        <panel>
            <form class="create-form">
                <div class="form-group">
                    <label for="newburger" id="color-text">New Burger:</label>
                    <input type="text" id="newburger" name="burger">
                    {{!-- Button --}}
                    <button type="submit" class="btn btn-success" id="addburger" title="Create Burger!"><span class="fa fa-check"></span></button>
                </div>
            </form>
        </panel>
    </div>

    <div class="row">
        <!-- Undevoured Burgers -->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="leftheading"><strong>New Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                            {{#unless devoured}}
                                <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                                <button type="button" class="devourburger btn btn-warning" id="eatbutton" title="Devour Burger!" data-id="{{this.id}}" data-newDevoured="{{devour}}"><span class="fa fa-thumbs-o-up"></span></button>
                                <hr>
                            {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <!-- Devoured Burgers -->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="rightheading"><strong>Devoured Burgers</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                            {{#if devoured}}
                                <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                                <button type="button" class="throwaway btn btn-danger" id="throwbutton" title="Throw Away!" data-id="{{this.id}}" data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>
                                <hr>
                            {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>

</div>